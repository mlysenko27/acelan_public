<div class="my-2 mx-4">
  <label class="block font-medium  text-gray-900 mb-2" for="piezoelectric-matrix">
    Piezoelectric Properties
  </label>
  <div class="grid grid-cols-6 gap-2">

    <%- (1..3).each do |i| %>
      <%- (1..6).each do |j| %>
        <%- current = 10 * i + j %>
        <input
          id="aniso[pieso-<%= current %>]"
          name="aniso[piezo-<%= current %>]"
          type="text"
          value=<%=material.piezo(i, j) %>
          required
          class="appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline"
          />
        <p class="text-red-500 text-xs hidden" id="stiffness-<%= current %>-error">Please enter a valid number</p>
      <% end %>
    <% end %>
  </div>
</div>
