<nav data-controller="home" class="bg-gray-800">
  <div class="mx-auto max-w-7xl px-2 sm:px-6 lg:px-8">
    <div class="relative flex h-16 items-center justify-end">
      <%- if @current_user.present? %>
        <div class="text-base font-medium text-white">
          <%= @current_user.username %>
        </div>
        <%= render partial: 'components/button', locals: { url: logout_path, name: 'Sign out' } %>
      <% else %>
        <%= render partial: 'components/button', locals: { url: login_path, name: 'Login' } %>
        <%= render partial: 'components/button', locals: { url: signup_path, name: 'Sign up' } %>
      <% end %>

