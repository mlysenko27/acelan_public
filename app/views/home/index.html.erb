        <label for="location" class="inline-flex justify-center text-sm text-gray-900"></label>
        <select  id="location" data-home-target="languageSelector" data-action="home#changeLanguage" name="location" class="mb-6  w-full font-semibold rounded-md  shadow-lg ring-1 ring-black ring-opacity-5 focus:outline-none border-0 py-1.5 pl-3 pr-10 text-gray-900  focus:ring-2 focus:ring-indigo-600 sm:text-sm sm:leading-6">
          <option selected class="font-semibold">EN</option>
          <option          class="font-semibold">RU</option>
        </select>
      </div>

    </div>
  </div>

<%= render partial: 'components/pop_up', locals:{ text: "Language"} %>

</nav>


